<div id='login'>
  <div class='container'>
    <div id='login-row' class='row justify-content-center align-items-center'>
      <div id='login-column' class='col-md-6 col-md-offset-3'>
        <div id='login-box' class='col-md-12'>
          <h3 class='text-center info-label'>Login</h3>
          <%= form_for(resource, as: resource_name, url: user_session_path, html: { id: 'login-form', class: 'form' }) do |f| %>
            <div class='form-group'>
              <%= f.label :email, class: 'info-label' %><br>
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
            </div>

            <div class='form-group'>
              <%= f.label :password, class: 'info-label' %><br>
              <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
            </div>
            <div class='form-group'>
              <% if devise_mapping.rememberable? %>
                <%= f.label :remember_me, class: 'info-label' do %>
                  <span>Remember me</span>
                  <span><%= f.check_box :remember_me %></span>
                <% end %>
              <% end %><br>
              <%= f.submit 'Log in', class: 'btn themebtn btn-md' %>
            </div>
          <% end %>
          <%#= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
  </div>
</div>
