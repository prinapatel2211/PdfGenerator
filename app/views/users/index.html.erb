<section class='profile-info header' style='height:500px;'>
  <div class='row'>
    <div class='col-sm-10 col-sm-offset-1'>
      <div class='row'>
        <div class='col-sm-9'>
          <h1>Users</<h1>
        </div>
        <div class='col-sm-3'>
          <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn pull-right themebtn' %>
          <%= link_to 'Create User', users_new_path, class: 'btn pull-right themebtn' %>
        </div>
      </div>
      <div class='table-responsive'>
        <table class='table table-striped table-hover'>
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th colspan=5>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= link_to 'Edit', user_edit_path(user.id) %></td>
                <td><%= link_to 'Show / Preview PDF', user_show_path(user.id) %></td>
                <td><%= link_to 'PDF Theme Setting', user_setting_path(user.id) %></td>
                <td><%= link_to 'Download PDF', user_pdf_generate_path(user, format: 'pdf'), attachment: 'inline' %></td>
                <td><%= link_to 'Delete', user_destroy_path(user.id), method: :delete %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</section>
